<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:backgroundTint="@color/card55"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:contentPaddingBottom="14dp"
                app:contentPaddingLeft="20dp"
                app:contentPaddingRight="20dp"
                app:contentPaddingTop="14dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/greetingContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profileImage"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginEnd="10dp"
                            android:background="@drawable/user"
                            tools:src="@tools:sample/avatars" />

                        <LinearLayout
                            android:id="@+id/tvContainer1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@id/profileImage"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/dbGreeting"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Good morning" />

                            <TextView
                                android:id="@+id/dbName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Agatha Harkness"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <ImageButton
                            android:id="@+id/logoutBtn"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:src="@drawable/round_logout_24" />

                    </RelativeLayout>

                    <View
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="14dp"
                        android:layout_marginBottom="14dp"
                        android:background="?android:attr/listDivider" />

                    <TextView
                        android:id="@+id/dbPersonal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="Personal Information"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/personalInfoContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/personal1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tHeight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="🧍🏻 Height" />

                            <TextView
                                android:id="@+id/vHeight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="10dp"
                                android:text="162 cm"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tWeight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="🏋🏻 Weight" />

                            <TextView
                                android:id="@+id/vWeight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="56 kg"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/personal2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/dbPersonal"
                            android:layout_toEndOf="@id/personal1"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tAge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="🎂 Age" />

                            <TextView
                                android:id="@+id/vAge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="10dp"
                                android:text="35 y.o"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tBP"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="🩸 Blood Pressure" />

                            <TextView
                                android:id="@+id/vBP"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="120/85 mmHg"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:backgroundTint="@color/card55"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp"
                app:contentPadding="14dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnAnalyze"
                        style="@style/Widget.AppCompat.ActionButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/magicwand_40"
                        android:text="Analyze"
                        android:textAllCaps="false"
                        android:textColor="@color/text" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnRec"
                        style="@style/Widget.AppCompat.ActionButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/food"
                        android:text="Food Recom"
                        android:textAllCaps="false"
                        android:textColor="@color/text" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnHistory"
                        style="@style/Widget.AppCompat.ActionButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/refresh"
                        android:text="History"
                        android:textAllCaps="false"
                        android:textColor="@color/text" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:backgroundTint="@color/card55"
                app:cardCornerRadius="10dp"
                app:cardElevation="4dp"
                app:contentPadding="14dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/prob_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:gravity="center_horizontal"
                        android:text="Diabetes Probabilty"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!--                    <ProgressBar-->
                    <!--                        android:id="@+id/progressBar"-->
                    <!--                        style="@android:style/Widget.ProgressBar.Horizontal"-->
                    <!--                        android:layout_width="150dp"-->
                    <!--                        android:layout_height="150dp"-->
                    <!--                        android:indeterminate="false"-->
                    <!--                        android:progressDrawable="@drawable/analysis_percentage"-->
                    <!--                        android:max="100"-->
                    <!--                        android:progress="99" />-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/prob_title"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/percentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <com.capstone.diabite.view.CircularProgressView
                                android:id="@+id/circularProgressView"
                                android:layout_width="160dp"
                                android:layout_height="160dp" />

                            <TextView
                                android:id="@+id/progressText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:text="33%"
                                android:textColor="#69AAF1"
                                android:textSize="44sp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:text="@string/legend1"
                                android:textSize="13sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:layout_gravity="center_vertical"
                                android:textSize="13sp"
                                android:text="@string/legend2" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:layout_gravity="center_vertical"
                                android:textSize="13sp"
                                android:text="@string/legend3" />
                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/article_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                android:text="Related Articles"
                android:textSize="18sp"
                android:fontFamily="@font/poppins_semibold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvDashboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginBottom="12dp"
                tools:listitem="@layout/item_articles" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
