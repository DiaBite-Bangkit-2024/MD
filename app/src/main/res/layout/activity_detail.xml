                            android:layout_height="34dp"
                            android:gravity="center_vertical|end"
                            android:text="@string/gram"
                            android:textColor="#314278"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:id="@+id/divider3"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginVertical="4dp"
                    android:background="#314278" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/water"
                                android:layout_width="match_parent"
                                android:layout_height="28dp"
                                android:text="@string/water"
                                android:textColor="#314278"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/calcium"
                                android:layout_width="match_parent"
                                android:layout_height="28dp"
                                android:text="@string/calcium"
                                android:textColor="#314278"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/copper"
                                android:layout_width="match_parent"
                                android:layout_height="28dp"
                                android:text="@string/copper"
                                android:textColor="#314278"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/iron"
                                android:layout_width="match_parent"
                                android:layout_height="28dp"
                                android:text="@string/iron"
                                android:textColor="#314278"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/magnesium"
                                android:layout_width="match_parent"
                                android:layout_height="28dp"
                                android:text="@string/magnesium"
                                android:textColor="#314278"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/waterVal"
                                android:layout_width="wrap_content"
                                android:layout_height="28dp"
                                android:text="@string/mg"
                                android:textAlignment="textEnd"
                                android:textColor="#314278"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/calciumVal"
                                android:layout_width="wrap_content"
                                android:layout_height="28dp"
                                android:text="@string/mg"
                                android:textAlignment="textEnd"
                                android:textColor="#314278"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/copperVal"
                                android:layout_width="wrap_content"
                                android:layout_height="28dp"
                                android:text="@string/mg"
                                android:textAlignment="textEnd"
                                android:textColor="#314278"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/ironVal"
                                android:layout_width="wrap_content"
                                android:layout_height="28dp"
                                android:text="@string/mg"
                                android:textAlignment="textEnd"
                                android:textColor="#314278"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/magnesiumVal"
                                android:layout_width="wrap_content"
                                android:layout_height="28dp"
                                android:text="@string/mg"
                                android:textAlignment="textEnd"
                                android:textColor="#314278"
                                android:textSize="14sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/manganese"
                                android:layout_width="match_parent"
                                android:layout_height="28dp"
                                android:text="@string/manganese"
                                android:textColor="#314278"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/phosphorus"
                                android:layout_width="match_parent"
                                android:layout_height="28dp"
                                android:text="@string/phosphorus"
                                android:textColor="#314278"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/potassium"
                                android:layout_width="match_parent"
                                android:layout_height="28dp"
                                android:text="@string/potassium"
                                android:textColor="#314278"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/selenium"
                                android:layout_width="match_parent"
                                android:layout_height="28dp"
                                android:text="@string/selenium"
                                android:textColor="#314278"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/zinc"
                                android:layout_width="match_parent"
                                android:layout_height="28dp"
                                android:text="@string/zinc"
                                android:textColor="#314278"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/manganeseVal"
                                android:layout_width="wrap_content"
                                android:layout_height="28dp"
                                android:text="@string/mg"
                                android:textAlignment="textEnd"
                                android:textColor="#314278"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/phosphorusVal"
                                android:layout_width="wrap_content"
                                android:layout_height="28dp"
                                android:text="@string/mg"
                                android:textAlignment="textEnd"
                                android:textColor="#314278"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/potassiumVal"
                                android:layout_width="wrap_content"
                                android:layout_height="28dp"
                                android:text="@string/mg"
                                android:textAlignment="textEnd"
                                android:textColor="#314278"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/seleniumVal"
                                android:layout_width="wrap_content"
                                android:layout_height="28dp"
                                android:text="@string/mg"
                                android:textAlignment="textEnd"
                                android:textColor="#314278"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/zincVal"
                                android:layout_width="wrap_content"
                                android:layout_height="28dp"
                                android:text="@string/mg"
                                android:textAlignment="textEnd"
                                android:textColor="#314278"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:id="@+id/divider4"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:layout_marginVertical="4dp"
                    android:background="#314278" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/vitA"
                                android:layout_width="match_parent"
                                android:layout_height="28dp"
                                android:text="@string/vitamin_a"
                                android:textColor="#314278"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/vitB1"
                                android:layout_width="match_parent"
                                android:layout_height="28dp"
                                android:text="@string/vitamin_b1"
                                android:textColor="#314278"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/vitB11"
                                android:layout_width="match_parent"
                                android:layout_height="28dp"
                                android:text="@string/vitamin_b11"
                                android:textColor="#314278"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/vitB12"
                                android:layout_width="match_parent"
                                android:layout_height="28dp"
                                android:text="@string/vitamin_b12"
                                android:textColor="#314278"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/vitB2"
                                android:layout_width="match_parent"
                                android:layout_height="28dp"
                                android:text="@string/vitamin_b2"
                                android:textColor="#314278"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/vitB3"
                                android:layout_width="match_parent"
                                android:layout_height="28dp"
                                android:text="@string/vitamin_b3"
                                android:textColor="#314278"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/vitAVal"
                                android:layout_width="wrap_content"
                                android:layout_height="28dp"
                                android:text="@string/mg"
                                android:textAlignment="textEnd"
                                android:textColor="#314278"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/vitB1Val"
                                android:layout_width="wrap_content"
                                android:layout_height="28dp"
                                android:text="@string/mg"
                                android:textAlignment="textEnd"
                                android:textColor="#314278"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/vitB11Val"
                                android:layout_width="wrap_content"
                                android:layout_height="28dp"
                                android:text="@string/mg"
                                android:textAlignment="textEnd"
                                android:textColor="#314278"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/vitB12Val"
                                android:layout_width="wrap_content"
                                android:layout_height="28dp"
                                android:text="@string/mg"
                                android:textAlignment="textEnd"
                                android:textColor="#314278"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/vitB2Val"
                                android:layout_width="wrap_content"
                                android:layout_height="28dp"
                                android:text="@string/mg"
                                android:textAlignment="textEnd"
                                android:textColor="#314278"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/vitB3Val"
                                android:layout_width="wrap_content"
                                android:layout_height="28dp"
                                android:text="@string/mg"
                                android:textAlignment="textEnd"
                                android:textColor="#314278"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:baselineAligned="false"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/vitB5"
                                android:layout_width="match_parent"
                                android:layout_height="28dp"
                                android:text="@string/vitamin_b5"
                                android:textColor="#314278"
