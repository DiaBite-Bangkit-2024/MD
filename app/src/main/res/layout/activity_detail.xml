<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".view.food.DetailActivity">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="6dp"
        android:backgroundTint="@color/white"
        app:contentPadding="10dp"
        app:strokeColor="#314278"
        app:strokeWidth="4dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="4dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/btnClose"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:background="?attr/selectableItemBackground"
                        android:contentDescription="@string/arrow"
                        android:elevation="20dp"
                        android:src="@drawable/close"
                        app:tint="@color/black" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="54dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="@string/nutrition_facts"
                        android:textColor="#314278"
                        android:textSize="40sp" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/foodName"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="@string/food_name"
                    android:textColor="#314278"
                    android:textSize="25sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/servingSize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:text="@string/serving_size"
                        android:textColor="#314278"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/servingSizeVal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_alignParentEnd="true"
                        android:text="@string/serving_size_val"
                        android:textColor="#314278"
                        android:textSize="20sp" />

                </RelativeLayout>


                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginVertical="4dp"
                    android:background="#314278" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/amount_per_serving"
                        android:textColor="#314278"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/cal"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_below="@id/amount"
                        android:layout_marginTop="-10dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="@string/calories"
                        android:textColor="#314278"
                        android:textSize="36sp" />

                    <TextView
                        android:id="@+id/calNum"
                        android:layout_width="wrap_content"
                        android:layout_height="63dp"
                        android:layout_alignBottom="@id/cal"
                        android:layout_alignParentEnd="true"
                        android:text="@string/calNum"
                        android:textColor="#314278"
                        android:textSize="50sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:layout_marginVertical="4dp"
                    android:background="#314278" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/fat"
                            android:layout_width="match_parent"
                            android:layout_height="26dp"
                            android:fontFamily="@font/poppins_extrabold"
                            android:text="Fat"
                            android:textColor="#314278"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/satFat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:text="@string/saturated_fat"
                            android:textColor="#314278"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/monoFat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:text="@string/monounsaturated_fat"
                            android:textColor="#314278"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/polyFat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:text="@string/polyunsaturated_fat"
                            android:textColor="#314278"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/cholesterol"
                            android:layout_width="match_parent"
                            android:layout_height="26dp"
                            android:fontFamily="@font/poppins_extrabold"
                            android:text="@string/cholesterol2"
                            android:textColor="#314278"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/sodium"
                            android:layout_width="match_parent"
                            android:layout_height="26dp"
                            android:fontFamily="@font/poppins_extrabold"
                            android:text="@string/sodium"
                            android:textColor="#314278"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/carb"
                            android:layout_width="match_parent"
                            android:layout_height="26dp"
                            android:fontFamily="@font/poppins_extrabold"
                            android:text="@string/carbohydrate"
                            android:textColor="#314278"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/dietFiber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:text="@string/dietary_fiber"
                            android:textColor="#314278"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/sugar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:text="@string/sugars"
                            android:textColor="#314278"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/protein"
                            android:layout_width="match_parent"
                            android:layout_height="34dp"
                            android:fontFamily="@font/poppins_extrabold"
                            android:text="@string/protein"
                            android:textColor="#314278"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/fatVal"
                            android:layout_width="match_parent"
                            android:layout_height="26dp"
                            android:gravity="center_vertical|end"
                            android:text="@string/gram"
                            android:textColor="#314278"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/satFatVal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:gravity="center_vertical|end"
                            android:text="@string/gram"
                            android:textColor="#314278"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/monoFatVal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:gravity="center_vertical|end"
                            android:text="@string/gram"
                            android:textColor="#314278"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/polyFatVal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:gravity="center_vertical|end"
                            android:text="@string/gram"
                            android:textColor="#314278"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/cholesterolVal"
                            android:layout_width="match_parent"
                            android:layout_height="26dp"
                            android:gravity="center_vertical|end"
                            android:text="@string/mg"
                            android:textColor="#314278"
                            android:textSize="14sp" />

                        <TextView
