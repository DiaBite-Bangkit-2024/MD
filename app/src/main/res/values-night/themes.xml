<resources>
    <!-- Base application theme. -->
    <style name="Theme.DiaBite" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_background</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_card</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_card</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="cardBackgroundColor">@color/dark_background</item>
        <item name="cardForegroundColor">@color/dark_card</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="buttonStyle">@style/customButton</item>
        <item name="android:textColorHint">#9C9C9C</item>
        <item name="imageButtonStyle">@style/btnImg</item>
        <item name="colorSurfaceContainer">@color/dark_nav</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="indicatorColor">@color/dark_card</item>
        <item name="colorTertiaryContainer">@color/dark_card</item>
        <item name="colorSecondaryContainer">#4A4A4A</item>
        <item name="android:spinnerItemStyle">@style/spinnerTC</item>
    </style>

    <style name="spinnerTC" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textColor">@color/black</item>
<!--        <item name="android:drop">@color/black</item>-->
    </style>

    <style name="highlight">
        <item name="textColor">#fff</item>
    </style>

    <style name="btnImg" parent="Widget.AppCompat.ImageButton">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="SwitchStyle">
        <item name="android:thumbTint">@color/accent</item>
        <item name="android:trackTint">@color/gray</item>
    </style>

    <style name="customButton" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:backgroundTint">@color/dark_card</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <!--        <item name="android:insetTop">0dp</item>-->
        <!--        <item name="iconGravity">textStart</item>-->
    </style>

    <style name="customButton2" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:backgroundTint">@color/dark_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <!--        <item name="android:insetTop">0dp</item>-->
        <!--        <item name="iconGravity">textStart</item>-->
    </style>

    <style name="card_rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">45dp</item>
        <item name="cornerSizeTopLeft">45dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="MySliderStyle">
        <item name="thumbColor">@color/accent</item>
        <item name="trackColor">@color/primary</item>
        <item name="tickColor">@color/gray</item>
        <item name="thumbElevation">4dp</item>
    </style>

</resources>