<resources>
    <style name="Theme.DiaBite" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">@color/card</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="cardBackgroundColor">@color/card</item>
        <item name="cardForegroundColor">@color/card55</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="buttonStyle">@style/customButton</item>
        <item name="android:textColorHint">#9C9C9C</item>
        <item name="colorSurfaceContainer">@color/tertiary</item>
        <item name="colorOnTertiary">@color/black</item>
        <item name="indicatorColor">#F1F8FF</item>
        <item name="colorTertiaryContainer">@color/white</item>
        <item name="colorSecondaryContainer">#ebebeb</item>
        <item name="android:spinnerDropDownItemStyle">@style/spinnerTC</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="spinnerTC" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="highlight">
        <item name="textColor">#000</item>
    </style>

    <style name="customButton" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:backgroundTint">@color/accent</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SwitchStyle">
        <item name="android:thumbTint">@color/accent</item>
        <item name="android:trackTint">@color/gray</item>
    </style>


    <style name="customButton2" parent="Widget.Material3.Button.ElevatedButton">
        <item name="android:backgroundTint">@color/accent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.MaterialComponents.Button.IconOnly">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingHorizontal">12dp</item>
        <item name="android:minWidth">12dp</item>
        <item name="android:minHeight">12dp</item>
        <item name="iconGravity">textStart</item>
        <item name="backgroundTint">@color/background</item>
    </style>

    <style name="card_rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">45dp</item>
        <item name="cornerSizeTopLeft">45dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="card_user">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">20dp</item>
    </style>

    <style name="gemini">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomRight">20dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="animation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="MySliderStyle">
        <item name="thumbColor">@color/accent</item>
        <item name="trackColor">@color/primary</item>
        <item name="tickColor">@color/gray</item>
        <item name="thumbElevation">4dp</item>
    </style>

    <style name="fab_3_rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">50%</item>
        <item name="cornerSizeTopLeft">50%</item>
        <item name="cornerSizeTopRight">50%</item>
    </style>

</resources>