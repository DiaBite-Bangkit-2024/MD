<resources>
    <!-- Base application theme. -->
    <style name="Theme.DiaBite" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/card</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/background</item>
        <item name="cardBackgroundColor">@color/card</item>
        <item name="cardForegroundColor">@color/card55</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="buttonStyle">@style/customButton</item>
        <item name="android:textColorHint">#9C9C9C</item>
    </style>

    <style name="customButton" parent="Widget.Material3.Button.ElevatedButton">
        <item name="backgroundTint">@color/accent</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">16sp</item>
<!--        <item name="android:insetTop">0dp</item>-->
<!--        <item name="iconGravity">textStart</item>-->
    </style>

    <style name="card_rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">45dp</item>
        <item name="cornerSizeTopLeft">45dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="card_user">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">20dp</item>
    </style>

    <style name="gemini">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomRight">20dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="animation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="MySliderStyle">
        <item name="thumbColor">@color/accent</item>
        <item name="trackColor">@color/primary</item>
        <item name="tickColor">@color/gray</item>
        <item name="thumbElevation">4dp</item>
    </style>

    <style name="fab_3_rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">50%</item>
        <item name="cornerSizeTopLeft">50%</item>
        <item name="cornerSizeTopRight">50%</item>
    </style>

</resources>