<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <!-- background color -->
            <item>
                <shape>
                    <solid android:color="@color/card" />

                    <corners android:radius="12dp" />

                </shape>

            </item>
            <!--  left shadow -->
            <item>
                <shape android:shape="rectangle">
                    <gradient android:angle="180" android:centerColor="#00FF0000" android:centerX="0.985" android:endColor="#12000000" android:startColor="#00FF0000" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
            <!--  right shadow -->
            <item>
                <shape android:shape="rectangle">
                    <gradient android:angle="360" android:centerColor="#00FF0000" android:centerX="0.985" android:endColor="#12000000" android:startColor="#00FF0000" />
                    <corners android:radius="12dp" />
                </shape>
            </item>
            <!--  top shadow -->
            <item>
                <shape android:shape="rectangle">
                    <gradient android:angle="270" android:centerColor="#00FF0000" android:centerY="0.14" android:endColor="#00FF0000" android:startColor="#20000000" />
                    <corners android:radius="12dp" />
                </shape>
            </item>

            <item
                android:width="24dp"
                android:height="24dp"
                android:gravity="end|center_vertical"
                android:drawable="@drawable/dropdown"
                />

        </layer-list>
    </item>
</selector>